# PlayazKlub PPV System Environment Variables
# Copy this to .env.local and fill in your actual values

# Database & CMS
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_api_token_here
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Auth0 Configuration (if using Auth0)
AUTH0_SECRET=your_auth0_secret
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# OwnCast Configuration
OWNCAST_URL=https://stream.playazklub.com
OWNCAST_ADMIN_USER=admin
OWNCAST_ADMIN_PASS=your_secure_admin_password
NEXT_PUBLIC_OWNCAST_URL=https://stream.playazklub.com

# Optional: Additional Security
JWT_SECRET=your_jwt_secret_for_custom_tokens
WEBHOOK_SIGNATURE_SECRET=your_custom_webhook_secret

# Optional: Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
GA_TRACKING_ID=your_google_analytics_id