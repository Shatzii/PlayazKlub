{
  "routes": [
    {
      "method": "GET",
      "path": "/events",
      "handler": "event.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/events/:id",
      "handler": "event.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/events/:id/check-access",
      "handler": "event.checkAccess",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/events/:id/stream-url",
      "handler": "event.getStreamUrl",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}