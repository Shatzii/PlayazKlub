{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Live streaming events with PPV capabilities"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 500
    },
    "eventDate": {
      "type": "datetime",
      "required": true
    },
    "duration": {
      "type": "integer",
      "description": "Duration in minutes"
    },
    "isPPV": {
      "type": "boolean",
      "default": false,
      "description": "Is this a Pay-Per-View event?"
    },
    "isLive": {
      "type": "boolean",
      "default": false,
      "description": "Is the event currently live?"
    },
    "streamStatus": {
      "type": "enumeration",
      "enum": ["scheduled", "live", "ended", "cancelled"],
      "default": "scheduled",
      "required": true
    },
    "price": {
      "type": "decimal",
      "description": "PPV price in USD"
    },
    "stripePriceId": {
      "type": "string",
      "description": "Stripe Price ID for PPV checkout"
    },
    "ownCastStreamKey": {
      "type": "string",
      "private": true,
      "description": "Private OwnCast stream key"
    },
    "ownCastStreamId": {
      "type": "string",
      "description": "OwnCast stream identifier"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "enumeration",
      "enum": ["podcast", "interview", "live-show", "special-event", "workshop"],
      "default": "live-show"
    },
    "tags": {
      "type": "json",
      "description": "Event tags for categorization"
    },
    "maxViewers": {
      "type": "integer",
      "description": "Maximum concurrent viewers (optional limit)"
    },
    "recordingAvailable": {
      "type": "boolean",
      "default": false,
      "description": "Will recording be available after event?"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}