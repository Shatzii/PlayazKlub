{
  "kind": "collectionType",
  "collectionName": "ppv_purchases",
  "info": {
    "singularName": "ppv-purchase",
    "pluralName": "ppv-purchases",
    "displayName": "PPV Purchase",
    "description": "Pay-per-view event purchases"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "eventId": {
      "type": "string",
      "required": true
    },
    "userEmail": {
      "type": "email",
      "required": true
    },
    "stripeSessionId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "stripePaymentIntentId": {
      "type": "string"
    },
    "amount": {
      "type": "decimal",
      "description": "Amount paid in USD"
    },
    "currency": {
      "type": "string",
      "default": "usd"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "completed", "failed", "refunded"],
      "default": "pending",
      "required": true
    },
    "purchaseDate": {
      "type": "datetime",
      "required": true
    },
    "accessGrantedAt": {
      "type": "datetime"
    },
    "refundedAt": {
      "type": "datetime"
    },
    "metadata": {
      "type": "json",
      "description": "Additional purchase metadata"
    }
  }
}